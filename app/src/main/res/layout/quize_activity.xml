<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/cardTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заголовок карты"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/вариантыГруппа"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/ответ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ 1"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/ответ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ 2"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/ответ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ 3"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/ответ4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответ 4"/>
    </RadioGroup>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Подтвердить ответ"
        android:minWidth="120dp"
        android:minHeight="48dp"/>
</LinearLayout>